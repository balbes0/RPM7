@model int

<div class="card mb-4">
    <div class="card-body">
        <h4 class="card-title">Оставить отзыв</h4>
        <form asp-controller="Home" asp-action="AddReview" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="ProductId" value="@Model" />

            <div class="form-group mb-3">
                <label for="rating" class="form-label">Рейтинг</label>
                <select class="form-select" id="rating" name="Rating" required aria-describedby="ratingHelp">
                    <option value="" disabled selected>Выберите рейтинг</option>
                    <option value="1">★ 1</option>
                    <option value="2">★★ 2</option>
                    <option value="3">★★★ 3</option>
                    <option value="4">★★★★ 4</option>
                    <option value="5">★★★★★ 5</option>
                </select>
                <small id="ratingHelp" class="form-text text-muted">Выберите рейтинг от 1 до 5.</small>
                @if (ViewBag.RatingError != null)
                {
                    <div class="invalid-feedback d-block">@ViewBag.RatingError</div>
                }
            </div>

            <div class="form-group mb-3">
                <label for="reviewText" class="form-label">Ваш отзыв</label>
                <textarea class="form-control" id="reviewText" name="ReviewText" rows="4" placeholder="Напишите ваш отзыв" required aria-describedby="reviewTextHelp"></textarea>
                <small id="reviewTextHelp" class="form-text text-muted">Опишите ваш опыт использования товара.</small>
                @if (ViewBag.ReviewTextError != null)
                {
                    <div class="invalid-feedback d-block">@ViewBag.ReviewTextError</div>
                }
            </div>

            <button type="submit" class="btn btn-primary" aria-label="Отправить отзыв">Отправить отзыв</button>
        </form>
    </div>
</div>
